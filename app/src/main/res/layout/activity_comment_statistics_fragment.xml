<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    tools:context=".Fragment.CommentStatisticsActivity">


    <TextView
        android:id="@+id/textViewTotalReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Total Reviews:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearFiveStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTotalReviews"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFiveStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="5 Star: "
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBarFiveStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_dark"
            android:rating="0"
            android:stepSize="1" />

        <TextView
            android:id="@+id/textViewCountFiveStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" (0)"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearFourStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearFiveStar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFourStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="4 Star: "
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBarFourStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_dark"
            android:rating="0"
            android:stepSize="1" />

        <TextView
            android:id="@+id/textViewCountFourStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" (0)"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearThreeStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearFourStar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewThreeStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="3 Star: "
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBarThreeStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_dark"
            android:rating="0"
            android:stepSize="1" />

        <TextView
            android:id="@+id/textViewCountThreeStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" (0)"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearTwoStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearThreeStar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTwoStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="2 Star: "
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBarTwoStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_dark"
            android:rating="0"
            android:stepSize="1" />

        <TextView
            android:id="@+id/textViewCountTwoStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" (0)"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearOneStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearTwoStar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOneStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="1 Star: "
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBarOneStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_dark"
            android:rating="0"
            android:stepSize="1" />

        <TextView
            android:id="@+id/textViewCountOneStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" (0)"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTotalPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearOneStar"
        android:layout_marginTop="16dp"
        android:text="Total Points: 0"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
